<script>
    async function validateAadhar() {
        const aadhar = document.getElementById("aadhar").value;
    
        // Make an AJAX request to the new endpoint
        const response = await fetch('/validate-aadhar', {
          method: 'GET',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ aadhar }),
        });
    
        const data = await response.json();
    
        if (data.isValid) {
          alert('Aadhar is valid');
        } else {
          alert('Aadhar is not valid');
        }
      }
    </script>    
